<!-- enjoy_view_pablic_customers_liked_illustrations -->
  
  
  <div class="row">
    <div class="mx-auto auto col-11 col-sm10 col-lg col-xl-5">
      
        <!-- 色指定のスタイル -->
      <style>
       .example {
        background-color: #F0F0F0;
        width:400px;
        height:30px;
       }
      </style>
      
        <!-- サンプル画像,サンプル名,説明文,ジャンル -->
      <table width="450"  height="80">
        
      <h4 class="example" align="center">いいねした投稿(ブックマーク)</h4>
          
          <% @liked_illustrations.each do |post| %>
            <tr>
                <!-- タイトル -->
              <th>
                <%= post.name %> 
              </th>
                <!-- 画像 -->
              <td>
                <%= link_to illustration_path(post.id) do %>
                  <%= image_tag post.image, style: "max-width:200px;" %> 
                <% end %>
              </td>
                <!-- ジャンル -->
              <td>
                <%= post.genre.name %>
              </td>
                <!-- いいね数 -->
              <td>
                ♥<%= post.nice.count %>いいね
              </td>
                <!-- コメント数 -->
              <td>
                コメント件数：<%= post.comments.count %>
              </td>
            </tr>
          <% end %>
      </table>
      <%= paginate @liked_illustrations %>
    </div>
      <!-- ページネイション -->
    <div class="d-flex justify-content-center">
      <%#= paginate @liked_illustrations, theme: 'bootstrap-5' %>
    </div>
  </div>
  
  