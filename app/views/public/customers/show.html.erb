<!-- enjoy_view_pablic_customers_show -->
  
  
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <!-- 色指定のスタイル -->
      <style>
       .example {
        background-color: #F0F0F0;
        width:160px;
        height:30px;
       }
      </style>
      
      <h4 class="example" align="center">マイページ</h4>
      
      <br />
      
        <!-- 登録情報編集へ遷移〇 -->
      <table>
        <tr>
          <th>
              登録情報
            <% if @customer == current_customer %>
              <%= link_to "編集する", information_edit_path, class:"btn btn-success" %>
            <% end %> 
          </th>
        </tr>
        
      </table>
      
      <table border="1" width="500"  height="250">
          <!-- 顧客情報欄〇 -->
        <tbody>
            <!-- ニックネーム -->
          <tr>
            <th>ニックネーム</th>
              <td>
                <%= @customer.nickname %>
              </td>
          </tr>
            <!-- メールアドレス -->
          <tr>
            <th>メールアドレス</th>
              <td>
                <%= @customer.email %>
              </td>
          </tr>
            <!-- 氏名 -->
          <tr>
            <th>氏名</th>
              <td>
                <%= @customer.last_name %>
                <%= @customer.first_name %>
       　　     </td>
          </tr>
            <!-- カナ -->
          <tr>
            <th>カナ</th>
              <td>
                <%= @customer.last_name_kana %>
                <%= @customer.first_name_kana %>
       　　     </td>
          </tr>
            <!-- 誕生日 -->
          <tr>
            <th>誕生日</th>
              <td>
                <%= @customer.birth_day %>
              </td>
          </tr>
        </tbody>
          
      </table>
      
          <!-- 注文履歴一覧△ -->
      <table>
        <tr style="height: 100px;">
          <th>いいね一覧</th>
            <td>
              <%= link_to "一覧を見る", root_path, class:"btn btn-primary" %>
            </td>
        </tr>
      </table>
      
    </div>
  </div>
  