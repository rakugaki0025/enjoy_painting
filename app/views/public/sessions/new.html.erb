<!-- Enjoy_view_public_sessions -->
  
  
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <!-- エラーメッセージ(アラート) -->
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>
        <!-- 色指定のスタイル -->
      <style>
       .example {
        background-color: #F0F0F0;
        width:300px;
        height:30px;
        border-radius: 10px; /* 角を丸くするための設定 */
       }
      </style>
      <h4 class="example" align="center">カスタマーログイン画面</h4>
      <%= form_with(model: resource, url: session_path(resource_name)) do |f| %>
          <!-- メールアドレス -->
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
          <!-- メールアドレス -->
        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Log in", class:"btn btn-primary" %>
        </div>
      <% end %>
        <!-- 修正済み -->
      <%= render "public/shared/links" %>から新規登録を行ってください。
    </div>
  </div>
  
  