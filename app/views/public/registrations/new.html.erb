<!-- Enjoy_view_public_registrations -->
  
<div class="row">
  <div class="mx-auto auto col-11 col-sm10 col-lg col-xl-8">
    <h5 class="example" align="center">新規会員登録</h5>
      <!-- 色指定のスタイル -->
    <style>
     .example {
      background-color: #F0F0F0;
      width:180px;
      height:28px;
      border-radius: 10px; /* 角を丸くするための設定 */
     }
    </style>
    <!--<h5 class="example" align="center">新規会員登録</h5>-->
    <%= form_with(model: resource, local: true, url: registration_path(resource_name)) do |f| %>
      <!-- エラーメッセージ -->
    <%= render "public/shared/error_messages", resource: resource %>
      <table width="700"  height="100">
          <!-- last_name_box,first_name_box -->
        <tr>
          <th><%= f.label :名前 %></th>
            <th>
              (姓)<%= f.text_field :last_name, autofocus: true %>
            </th>
            <th>
              (名)<%= f.text_field :first_name, autofocus: true %>
            </th>
        </tr>
          <!-- last_name_kana_box,first_name_kana_box -->
        <tr>
          <th><%= f.label :フリガナ %></th>
            <th>
              (セイ)<%= f.text_field :last_name_kana, autofocus: true %>
            </th>
            <th>
              (メイ)<%= f.text_field :first_name_kana, autofocus: true %>
            </th>
        </tr>
          <!-- e-mail_box -->
        <tr>
          <th><%= f.label :メールアドレス %></th>
            <th>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </th>
        </tr>
          <!-- nickname_box -->
        <tr>
          <th><%= f.label :ニックネーム %></th>
            <th>
              <%= f.text_field :nickname, autofocus: true %>
            </th>
        </tr>
          <!-- birth_day_box -->
        <tr>
          <th><%= f.label :誕生日 %></th>
            <th>
              <%= f.text_field :birth_day, autofocus: true %>
            </th>
        </tr>
          <!-- password_box -->
        <tr>
          <th>
            <%= f.label :パスワード %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
          </th>
          <th>  
            <%= f.password_field :password, autocomplete: "new-password" %>
          </th>
        </tr>
          <!-- passoword_confirmation_box -->
        <tr>
          <th><%= f.label :パスワード（確認用） %></th>
            <th>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </th>
        </tr>
          <!-- sign_up_box -->
        <tr>
          <th>
            <%= f.submit "新規登録", class:"btn btn-success" %>
          </th>
        </tr>
      </table>
    <% end %>
    <h5 class="example" align="center">既に登録済みの方</h5>
    <%= render "public/shared/links" %>からログインしてください。
  </div>
</div>

