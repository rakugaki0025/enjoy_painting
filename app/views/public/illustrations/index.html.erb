<!-- Enjoy_view_admin_illustrations_index -->
  
  
  <div class="row">
        <!-- 色指定のスタイル -->
      <style>
       .example {
        background-color: #F0F0F0;
        width:250px;
        height:30px;
       }
      </style>
        <!-- イラスト投稿画像一覧,アイコン -->
      <table width="950"  height="50">
        <tr>
            <!-- イラスト投稿画像一覧 -->
          <td>
            <h4 class="example" align="center">顧客_投稿画像一覧</h4>
          </td>
            <!-- イラスト新規登録画面へ,アイコン済△ -->
          <td align="right">
            <%= link_to new_illustration_path, class: 'nav-link text-black' do %>
              <i class="fas fa-pen-nib" aria-hidden="true"></i>
            <% end %>
          </td>
        </tr>
      </table>
      
    <div class="mx-auto auto col-11">
      
        <!-- サンプルID,サンプル名,説明文,ジャンル -->
      <table border="1" width="900"  height="280">
              <!-- ID,画像,名前,説明文,ジャンル,削除〇 -->
        <thead class="example">
          <tr align=”center”>
            <th>ID</th>
            <th>投稿画像</th>
            <th>タイトル</th>
            <th>説明文</th>
            <th>ジャンル</th>
            <th>削除</th>
          </tr>
        </thead>
              <!-- イラスト一覧表示〇 -->
        <% @illustrations.each do |illustration| %>
              <!-- ID,画像,名前,説明文,ジャンル,削除〇 -->
        <tbody>
          <tr>
              <!-- イラストナンバー〇 -->
            <td>
              <%= illustration.id %>
            </td>
              <!-- イラスト画像〇 -->
            <td>
              <%= link_to illustration_path(illustration.id) do %>
                <%= image_tag illustration.get_image, size: "150x180" %>
              <% end %>
            </td>
              <!-- イラスト名〇 -->
            <td>
              <%= link_to illustration_path(illustration.id) do %>
                <%= illustration.name %>
              <% end %>
            </td>
              <!-- 説明文〇 -->
            <td>
              <%= illustration.introduction %>
            </td>
              <!-- ジャンル〇 -->
            <td>
              <%= illustration.genre.name %>
            </td>
              <!-- 削除ボタン〇 -->
            <td>
              <%= link_to "削除", illustration_path(illustration), class:"btn btn-danger", method: :delete, data: { confirm: "本当に削除しますか？" } %>
            </td>
          </tr>
        </tbody>
            
        <% end %>
        
      </table>
          
    </div>
  </div>
  
  