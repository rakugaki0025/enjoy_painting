<!-- Enjoy_views_layouts_application -->

<!DOCTYPE html>
<html>
  <head>
    <title>EnjoyPainting</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
      <!-- FontAwesomeの記述 -->
    <script src="https://kit.fontawesome.com/5e22f18747.js" crossorigin="anonymous"></script>
      <!-- 変更済み -->
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <p id="notice"></p>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to "EnjoyPainting", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <!-- ログイン,ログアウト -->
          <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
            <!-- マイページ_pablic -->
              <li class="nav-item">
                <%= link_to "マイページ", customers_my_page_path, class: "nav-link text-light" %>
              </li>
                <!-- 投稿一覧_pablic -->
              <li class="nav-item">
                <%= link_to "投稿一覧", illustrations_path, class: "nav-link text-light" %>
              </li>
                <!-- ブックマーク_pablic -->
              <li class="nav-item">
                <%= link_to "ブックマーク", liked_illustrations_path, class: "nav-link text-light" %>
              </li>
                <!-- ログアウトボタン_pablic -->
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: "nav-link text-light" %>
              </li>
            <!-- admin_ログイン -->
            <% elsif admin_signed_in? %>
              <!-- 管理者投稿一覧_admin〇 -->
              <li class="nav-item">
                <%= link_to "管理者投稿一覧", admin_sample_illustration_index_path, class: "nav-link text-light" %>
              </li>
                <!-- 会員一覧_admin〇 -->
              <li class="nav-item">
                <%= link_to "会員一覧", admin_customers_path, class: "nav-link text-light" %>
              </li>
                <!-- ログアウトボタン_admin〇 -->
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "nav-link text-light" %>
              </li>
            <!-- ログアウト_customer -->
            <% else %>
              <!-- About_pablic〇 -->
              <li class="nav-item">
                <%= link_to "About", about_path, class: "nav-link text-light" %>
              </li>
                <!-- ゲストログイン_pablic△ -->
              <li class="nav-item">
                <%= link_to 'ゲストログイン', users_guest_sign_in_path, class: "nav-link text-light", method: :post %>
              </li>
                <!-- 新規登録_pablic△ -->
              <li class="nav-item">
                <%= link_to "新規登録", new_customer_registration_path, class: "nav-link text-light" %>
              </li>
                <!-- ログインボタン_admin〇 -->
              <li class="nav-item">
                <%= link_to "ログイン", new_customer_session_path, class: "nav-link text-light" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <!-- main上部にmarginを適応 -->
    <main style="margin-top: 50px;">
      <div class="container">
        <!-- bodyがここに入る -->
        <%= yield %>
      </div>
    </main>
    <footer>
    </footer>
  </body>
</html>
