<!-- Enjoy_views_layouts_application -->

<!DOCTYPE html>
<html>
  <head>
    <title>EnjoyPainting</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
      <!-- FontAwesomeの記述 -->
    <script src="https://kit.fontawesome.com/5e22f18747.js" crossorigin="anonymous"></script>
      <!-- 変更済み -->
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
    <header>
      <p id="notice"></p>
        <!-- ヘッダーデザインまとめ -->
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <!-- ロゴアドレス -->
          <a class="navbar-brand" href="/">EnjoyPainting</a>
          
          <ul class="navbar-nav ml-auto">
              <!-- admin,customer/ログイン,ログアウト -->
            <div class="row">
                  <!-- customer_ログイン△ -->
              <% if customer_signed_in? %>
                <ul class="navbar-nav ml-auto">
                      <!-- マイページ_pablic△ -->
                    <li class="nav-item">
                      <%= link_to "マイページ", new_customer_session_path, class: "nav-link text-light" %>
                    </li>
                      <!-- 商品一覧_pablic△ -->
                    <li class="nav-item">
                      <%= link_to "投稿一覧", new_customer_session_path, class: "nav-link text-light" %>
                    </li>
                      <!-- カート_pablic△ -->
                    <li class="nav-item">
                      <%= link_to "ブックマーク", new_customer_session_path, class: "nav-link text-light" %>
                    </li>
                      <!-- ログアウトボタン_pablic〇 -->
                    <li class="nav-item">
                      <%= link_to 'cuログアウト', destroy_customer_session_path, method: :delete, class: "nav-link text-light" %>
                    </li>
                  </ul>
                  <!-- admin_ログイン△ -->
              <% elsif admin_signed_in? %>
                <ul class="navbar-nav ml-auto">
                      <!-- 商品一覧_admin〇 -->
                    <li class="nav-item">
                      <%= link_to "投稿一覧", new_customer_session_path, class: "nav-link text-light" %>
                    </li>
                      <!-- 会員一覧_admin〇 -->
                    <li class="nav-item">
                      <%= link_to "会員一覧", new_customer_session_path, class: "nav-link text-light" %>
                    </li>
                      <!-- ログアウトボタン_admin〇 -->
                    <li class="nav-item">
                      <%= link_to 'adログアウト', destroy_admin_session_path, method: :delete, class: "nav-link text-light" %>
                    </li>
                  </ul>
                  <!-- ログアウト_customer△ -->
              <% else %>
                <ul class="navbar-nav ml-auto">
                      <!-- About_pablic△ -->
                    <li class="nav-item">
                      <%= link_to "About", new_customer_session_path, class: "nav-link text-light" %>
                    </li>
                      <!-- 商品一覧_pablic△ -->
                    <li class="nav-item">
                      <%= link_to "ゲストログイン", new_customer_session_path, class: "nav-link text-light" %>
                    </li>
                      <!-- 新規登録_pablic△ -->
                    <li class="nav-item">
                      <%= link_to "新規登録", new_customer_registration_path, class: "nav-link text-light" %>
                    </li>
                      <!-- ログインボタン_admin〇 -->
                    <li class="nav-item">
                      <%= link_to "ログイン", new_customer_session_path, class: "nav-link text-light" %>
                    </li>
                  </ul>
                  
              <% end %>
              
            </div>
          </ul>
          
          
          
        </div>
      </nav>
      
      
      
    </header>
    
    
      <!-- main上部にmarginを適応 -->
    <main style="margin-top: 50px;">
      <div class="container">
          <!-- bodyがここに入る -->
        <%= yield %>
        
      </div>
    </main>
    
  </body>
  
  <footer>
    
  </footer>
  
</html>

